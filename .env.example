# Database: by default use Postgres in docker-compose (recommended).
# If you want to use sqlite locally, set DATABASE_URL=sqlite+aiosqlite:///./offers.db

# Postgres (docker)
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

# App DB URL used by both services (Litestar and Django)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/postgres

# App settings
DEBUG=True
ENV=development
SECRET_KEY=change_me_please

# Ports (optional overrides)
LITESTAR_PORT=5000
DRF_PORT=8000
